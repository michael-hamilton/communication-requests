form(action="/" method="post")

    input(class="form-input" type="hidden" placeholder="Name" name="series" value="#{series.title}" readonly="readonly" hidden="hidden")

    div(class="row")
        div(class="col medium col-12")

            h4 Who are you?

            div(class="form-row")
                label Name
                input(class="form-input" type="text" placeholder="Name" name="user[name]")

            div(class="form-row")
                label Email Address
                input(class="form-input" type="text" placeholder="Email Address" name="user[email_address]")

    hr

    div(class="row")
        div(class="col medium col-12")

            h4 Event details

            div(class="form-row")
                div(class="checkbox")
                    label
                        input(type="checkbox" onclick="$('#event-details').fadeToggle();" name="event[is_event]")
                        | &nbsp; Is this an event?

            div(id="event-details" class="col medium col-4" style="display:none;")

                div(class="form-row")
                    label Event Title
                    input(class="form-input" type="text" placeholder="Event Title" name="event[title]")

                div(class="form-row")
                    label Event Date
                    input(class="form-input" type="text" placeholder="Event Date" name="event[date]")

                div(class="form-row")
                    label Event Time(s)
                    input(class="form-input" type="text" placeholder="Event Time(s)" name="event[times]")

                div(class="form-row")
                    label Event Location
                    input(class="form-input" type="text" placeholder="Event Location" name="event[location]")

                div(class="form-row")
                    label Special Requests
                    textarea(class="form-input" placeholder="Special Requests" name="event[special_requests]")


    hr

    div(class="row")
        div(class="col medium col-12")

            h4 What mediums would you like this communicated?

            div(class="row")
                div(class="col medium col-3")
                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[app]")
                                | &nbsp; App

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[announcements]")
                                | &nbsp; Announcements

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[before_mass_slides]")
                                | &nbsp; Before Mass Slides

                div(class="col medium col-3")
                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[endnotes]")
                                | &nbsp; Endnotes

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[online_campus]")
                                | &nbsp; Online Campus

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[website]")
                                | &nbsp; Website

                div(class="col medium col-3")
                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[worship_fully]")
                                | &nbsp; Worship Fully

                div(class="col medium col-3")
                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[facebook]")
                                | &nbsp; Facebook

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[instagram]")
                                | &nbsp; Instagram

                    div(class="form-row")
                        div(class="checkbox")
                            label
                                input(type="checkbox" name="mediums[twitter]")
                                | &nbsp; Twitter

    hr

    div(class="row")
        div(class="col medium col-12")

            h4 What dates?

            h4: small #{series.title}

            each date in series.dates
                div(class="form-row")
                    div(class="checkbox")
                        label
                            input(type="checkbox" name="dates[#{date}]")
                            | &nbsp; #{date}

    hr

    div(class="row")
        div(class="col medium col-12")

            h4 Who and what?

            div(class="form-row")
                label What are you calling this?
                input(class="form-input" type="text" placeholder="Title" name="details[title]")

            div(class="form-row")
                label Who is your target audience?
                input(class="form-input" type="text" placeholder="Target Audience" name="details[target]")

            div(class="form-row")
                label Any other details we need to know?
                textarea(class="form-input" rows="10" placeholder="Other Details" name="details[details]")

    div(class="row")
        div(class="col medium col-12")

            div(class="form-row")
                button(class="btn btn-primary align-center" type="submit") Submit